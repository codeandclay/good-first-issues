<div class="issue">
  <div class="user-avatar">
    <%= image_tag(issue.user_avatar_url, size: '50x50') %>
  </div>
  <div class="details">
    <span class="repo-name"><%= issue.repo_name %></span>
    <span class="issue-title"><%= link_to issue.title, issue.url %></span>
    <span class="created-at"><%= time_ago_in_words(issue.created_at) %> ago</span>
    <div class="labels">
      <%= link_to issue.language.name, issues_path(languages: issue.language.name, labels: params['labels']), class: 'language-badge' %>
      <% issue.labels.each do |label| %>
        <%= link_to label.name, issues_path(labels: label.name, languages: params['languages']), class: 'badge' %>
      <% end %>
    </div>
  </div>
</div>

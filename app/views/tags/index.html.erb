<div class="content">
  <div class="selected-tags">
    <%= render 'shared/selected_tags' %>
    <%= link_to "See #{pluralize(@number_of_issues, 'issue')}", issues_path(labels: params[:labels], language: params[:language]), class: 'tags-link' %>
    <% if params? %>
      <%= link_to '[Remove all tags]', tags_path, class: 'reset-tags-link' %>
    <% end %>
  </div>

  <h2>Top languages</h2>
  <% @top_languages.each do |language| %>
    <%= language_link(name: language) %>
  <% end %>

  <h2>top labels</h2>
  <% @top_labels.each do |label| %>
    <%= label_link(name: label) %>
  <% end %>
  <div class="ajax-buttons">
    <%= render 'ajax_buttons' %>
  </div>
</div>
